{
    "name": "orzford/limoncello-validation",
    "description": "Validation implementation for Limoncello PHP framework.",
    "keywords": [
        "limoncello",
        "framework",
        "ldap"
    ],
    "homepage": "https://github.com/orzford/limoncello/tree/master/components/validation",
    "support": {
        "issues": "https://github.com/orzford/limoncello/issues"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "dreamsbond",
            "email": "info@dreamsbond.com"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "doctrine/dbal": "^2.10.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.9",
        "phpmd/phpmd": "^2.8",
        "scrutinizer/ocular": "^1.4",
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.0",
        "limoncello-php/validation": "^0.10.0",
        "orzford/limoncello-route": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Orzford\\Limoncello\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orzford\\Limoncello\\Test\\Validation\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test-unit-with-coverage",
            "@test-cs",
            "@test-md"
        ],
        "test-unit": "./vendor/bin/phpunit",
        "test-unit-with-coverage": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "test-cs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
        "test-md": "./vendor/bin/phpmd ./src text codesize,controversial,cleancode,design,unusedcode,naming",
        "test-unit-php-7-4": "docker-compose run --rm cli_7_4_php php ./vendor/bin/phpunit",
        "test-unit-php-7-3": "docker-compose run --rm cli_7_3_php php ./vendor/bin/phpunit",
        "test-unit-hhvm": "docker-compose run --rm cli_hhvm php -d hhvm.php7.all=1 ./vendor/bin/phpunit"
    },
    "extra": {}
}
